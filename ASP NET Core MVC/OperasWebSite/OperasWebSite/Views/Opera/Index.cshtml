@model IEnumerable<OperasWebSite.Models.Opera>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("New Opera", "Create", "Opera")
    </p>
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OperaName)</th>
            <th>@Html.DisplayNameFor(model => model.Compositor)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OperaName)</td>
                <td>@Html.DisplayFor(modelItem => item.Compositor)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.OperaId })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.OperaId }) </td>
            </tr>
        }
    </table>




</body>
</html>


